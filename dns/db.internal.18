$ORIGIN .
$TTL 600  ; 10 minutes
cdh-master.internal  IN SOA  dnsserver.cdh-boa.internal. hostmaster.cdh-boa.internal. (
        10         ; serial
        600        ; refresh (10 minutes)
        60         ; retry (1 minute)
        604800     ; expire (1 week)
        600        ; minimum (10 minutes)
        )
        NS  dnsserver.cdh-boa.internal.

; replace `cdh-cluster.internal` with the zone name defined in /etc/named/named.conf.local; note the trailing period (.)
$ORIGIN cdh-master.internal.
dnsserver    A  10.2.20.4
